{
  "name": "faster-release",
  "version": "1.0.1",
  "description": "Manage releases versioning easily with Faster Release CLI",
  "private": false,
  "author": {
    "name": "Donald Silveira",
    "email": "donaldsilveira@gmail.com",
    "url": "https://github.com/donnes/faster-release"
  },
  "bin": {
    "faster-release": "bin/faster-release"
  },
  "scripts": {
    "format": "eslint \"**/*.{js,jsx}\" --fix && prettier \"**/*.{js,jsx,json}\" --write",
    "lint": "eslint 'src/**' 'test/**'",
    "test": "jest",
    "watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "files": [
    "src",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "latest",
    "keep-a-changelog": "^2.1.0",
    "octokit": "^2.0.7",
    "radash": "^7.1.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^19.0.5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
